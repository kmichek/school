					<td>{{line.timeFrom}}</td>
					<td>{{line.timeTo}}</td>
					<td>{{line.quiz}}</td>
					<td>{{line.range1}}</td>
					<td>{{line.counter}}</td>
					<td>{{line.errors}}</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</section>

