<section class="">
	<div class="container">
		<table>
			<thead>
				<tr class="header">
					<th>START<div>START</div>
					</th>
					<th>END<div>END</div>
					</th>
					<th>QUIZ<div>QUIZ</div>
					</th>
					<th>{{t "classrooms.range1"}}<div>{{t "classrooms.range1"}}</div>
					</th>
					<th>{{t "classrooms.count"}}<div>{{t "classrooms.count"}}</div>
					</th>
					<th>{{t "classrooms.errors"}}<div>{{t "classrooms.errors"}}</div>
					</th>
				</tr>
			</thead>
			<tbody>
				{{#each this.statLines as |line|}}
