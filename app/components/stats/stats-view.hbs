<div class="statz" style="overflow-y:auto; overflow-x:hidden; padding-top:10px;" >
	<div style="display:block; float:left;">
		<table  id="statz">
			<tbody style="display:block; height:100%;">
				<tr style="padding-top:5px;">
					<td class="hader">START</td>
					<td class="hader">END</td>
					<td class="hader">QUIZ</td>
					<td class="hader">{{t "classrooms.range1"}}</td>
					<td class="hader">{{t "classrooms.count"}}</td>
					<td class="hader">{{t "classrooms.errors"}}</td>
				</tr>
				{{#each this.statLines as |line|}}
					<tr>
						<td>{{line.timeFrom}}</td  >
						<td>{{line.timeTo}}</td>
						<td>{{line.quiz}}</td>
						<td>{{line.range1}}</td>
						<td>{{line.counter}}</td>
						<td>{{line.errors}}</td>
					</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</div>

<style>
#statz {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 100%;
  text-align:center;
}

#statz td, #statz th {
  border: 0px solid #ddd;
  padding: 8px;
  font-size: 13px;
}

#statz tr:nth-child(even){background-color: #f2f2f2;}

#statz tr:hover {background-color: rgb(237, 237, 217);}

#statz th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  color: white;    
</style>