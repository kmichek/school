<PaperCard as |card|>
  <div class="layout-row flex layout-align-center" style="padding-top: 20px;">
    {{#if (eq this.teacher.quizMode this.teacher.quizPlusMinus2)}}
      {{t "classrooms.exercise1"}} {{t "classrooms.elements"}}
    {{else}}
      {{t "classrooms.exercise2"}} {{t "classrooms.elements"}}
    {{/if}}
  </div>
  <div class="layout-row flex layout-align-center" style="padding-top: 20px;">
    <div id="dvQuestion" class="answerBtn">{{this.teacher.question}}</div>
    <div id="dvAnswer" class="answerBtn"> &emsp; = &emsp;{{this.teacher.answer}}</div>
  </div>

  <div class="layout-row flex layout-align-center" style="padding-top: 20px;">
    <PaperButton @raised={{true}} @fab={{true}} @onClick={{action "calc" "0"}} class="answerBtn">0</PaperButton>
    <PaperButton @raised={{true}} @fab={{true}} @onClick={{action "calc" "1"}} class="answerBtn">1</PaperButton>
    <PaperButton @raised={{true}} @fab={{true}} @onClick={{action "calc" "2"}} class="answerBtn">2</PaperButton>
    <PaperButton @raised={{true}} @fab={{true}} @onClick={{action "calc" "3"}} class="answerBtn">3</PaperButton>
    <PaperButton @raised={{true}} @fab={{true}} @onClick={{action "calc" "4"}} class="answerBtn">4</PaperButton>
    <PaperButton @raised={{true}} @fab={{true}} @onClick={{action "calc" "5"}} class="answerBtn">5</PaperButton>
    <PaperButton @raised={{true}} @fab={{true}} @onClick={{action "calc" "6"}} class="answerBtn">6</PaperButton>
    <PaperButton @raised={{true}} @fab={{true}} @onClick={{action "calc" "7"}} class="answerBtn">7</PaperButton>
    <PaperButton @raised={{true}} @fab={{true}} @onClick={{action "calc" "8"}} class="answerBtn">8</PaperButton>
    <PaperButton @raised={{true}} @fab={{true}} @onClick={{action "calc" "9"}} class="answerBtn">9</PaperButton>
  </div>

  <div class="layout-row flex layout-align-center" style="padding-top: 20px;">
    <div id="dvCompleted" class="answerBtn">{{this.teacher.completed}}</div>
  </div>

  <div class="layout-row flex layout-align-center" style="padding-top: 20px;">
    <div id="dvFireworks" style="display:none; ">
      <img src="../../Fireworks.gif" />
    </div>
    <br>
    <div id="dvPanda" style="display:block; ">
      <img src="../../Panda.png">
    </div>
  </div>
</PaperCard>