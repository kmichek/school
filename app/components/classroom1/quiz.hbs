<div class="layout-row">
  <div class="side-left">
    <PaperList>
      {{#paper-link-item 'classroom1.exercise1'}}
        <p>{{t "classrooms.exercise1"}}</p>
      {{/paper-link-item}}
      {{#paper-link-item 'classroom1.exercise2'}}
        <p>{{t "classrooms.exercise2"}}</p>
      {{/paper-link-item}}
      {{#paper-link-item 'classroom1.exercise3'}}
        <p>{{t "classrooms.exercise3"}}</p>
      {{/paper-link-item}}
      {{#paper-link-item 'classroom1.exercise4'}}
        <p>{{t "classrooms.exercise4"}}</p>
      {{/paper-link-item}}
      {{#paper-link-item 'classroom1.exercise5'}}
        <p>{{t "classrooms.exercise5"}}</p>
      {{/paper-link-item}}
    </PaperList>
    <div>
      <PaperSelect @label={{t "classrooms.numberOfExercises"}} @options={{this.counts}} @selected={{this.count}} @onChange={{this.configSelectCount}} as |count|>
        {{count}}
      </PaperSelect>
    </div>
    <div>
      <PaperSelect @label={{t "classrooms.resultLimit"}} @options={{this.maxResults}} @selected={{this.maxResult}} @onChange={{this.configSelectMaxResult}} as |maxResult|>
        {{maxResult}}
      </PaperSelect>
    </div>
    <div>
      <PaperSelect @label={{t "classrooms.range"}} @options={{this.ranges1}} @selected={{this.range1}} @onChange={{this.configSelectRange1}} as |range1|>
        {{range1}}
      </PaperSelect>
    </div>
    <div style="padding-left: 88px;">
      <PaperButton @onClick={{this.start}} @accent={{true}} @raised={{true}}>Start</PaperButton>
    </div>
  </div>
  <div>
    {{outlet}}
  </div>
  <div class="side-right">
    <PaperList>
      {{#each this.results as |item idx|}}
        {{#if (eq idx 0)}}
          <div style="background-color: lightgrey">
            <PaperItem @class="md-1-line">
              <Common::ResultLine @question={{item.question}} @answer={{item.answer}} @status={{item.status}} />
            </PaperItem>
          </div>
        {{else}}
          <PaperItem @class="md-1-line">
            <div class="md-list-item-text">
              <Common::ResultLine @question={{item.question}} @answer={{item.answer}} @status={{item.status}} />
            </div>
          </PaperItem>
        {{/if}}
      {{/each}}
    </PaperList>
  </div>
</div>

<style>
  .md-input-has-value{
    width: 183px !important;
  }
</style>
